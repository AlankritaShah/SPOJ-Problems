
import java.util.Scanner;

class Main {
	public static void main(String[] args)throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		while(n!=0)
		{
			int numberofsquares=0;
			
			for(int i=n;i>=1;i--)
			{
				numberofsquares+=i*i;
			}
			System.out.println(numberofsquares);
			n=sc.nextInt();
		}
		sc.close();
	}
}
